<%= content_for :scripts do %>
  <%= javascript_include_tag 'login' %>
<% end %>

<div class="row">
  <div class="span6">
    <div class="hero-unit">
      <h1>漢字Drill</h1>
      <p>A fun and easy way to memorize the Kyoiku Kanji</p>
      <p>
        <%= link_to "Sign Up", new_registration_path(User), :class => ['btn', 'btn-primary', 'btn-large'] %>
        <%= link_to "Learn More", about_path, :class => ['btn', 'btn-primary', 'btn-large'] %>
      </p>
    </div>
  </div>
  <div class="span4">
    <% unless user_signed_in? %>
      <%= form_for(User.new, :url => session_path(User), :html => { :id => 'sign_in', :class => ['well', 'form-inline'] }, :remote => true, :format => :json) do |f| %>
        <div class="row">
          <%= f.email_field :email, :class => 'input-small', :placeholder => 'email' %>
          <%= f.password_field :password, :class => 'input-small', :placeholder => 'password'  %>
          <%= f.submit "Sign in", :class => 'btn' %>
        </div>
        <div class="row">
          <%= f.label :remember_me, :class => 'checkbox' do %>
            <%= f.check_box :remember_me %> Remember me
          <% end %>

          <%= link_to "Forgot your password?", new_password_path(User) %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
